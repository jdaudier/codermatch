    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Find coding buddies to pair program with | CoderMatch</title>
    <meta name="description" content="CoderMatch helps you find people to pair program with.">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <%= javascript_include_tag Hull.js_url %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "hull_components" %>

    <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= favicon_link_tag 'favicon.ico' %>

    <script type="text/javascript">

    Hull.init({ appId: '<%= Hull.app_id %>', orgUrl: '<%= Hull.org_url %>' }, function ()
    {

    // Afer user is destroyed, flash message stays with one redirect and will be true here
      <% if flash[:hull_logout] == true %>
        Hull.logout().then(function () {window.location = '/'});
      <% end %>

    });

    Hull.on('hull.auth.**', function() { document.location.reload(); });

    </script>

    <!-- Google Analytics -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-42676595-1', 'codermatch.me');
      ga('send', 'pageview');
    </script>
  </head>
  <body>
    <div class="wrapper">
      <%= render partial: "layouts/header" %>
      <%= yield %>
      <div class="push"></div>
    </div>
    <%= render partial: "layouts/footer" %>
  </body>
</html>
